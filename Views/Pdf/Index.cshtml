@model SecureFilesJoaoDias.Models.PdfViewModel

@{
    ViewData["Title"] = "PDF";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Para mozao Amanda Dias ❤️</h2>

    <!-- Animation Container -->
    <div id="file-security-animation" class="d-flex justify-content-center my-4" style="width: 200px; height: 200px;"></div>

    <form asp-action="SecurePdf" asp-controller="Pdf" enctype="multipart/form-data" method="post" class="bg-white p-4 rounded shadow-sm">
        <div class="form-group">
            <label for="PdfFile">Select PDF:</label>
            <input type="file" asp-for="PdfFile" class="form-control" />
        </div>
        <div class="form-group">
            <label for="OwnerPassword">Owner Password (Para permissões):</label>
            <input type="password" asp-for="OwnerPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label for="UserPassword">User Password (Para abrir o PDF):</label>
            <input type="password" asp-for="UserPassword" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Secure PDF</button>
    </form>
</div>

<!-- Modal for Already Secured Message -->
<div class="modal fade" id="alreadySecuredModal" tabindex="-1" aria-labelledby="alreadySecuredLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="alreadySecuredLabel">Atenção</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                O arquivo PDF que você enviou já está seguro.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.9.4/lottie.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Lottie animation
        lottie.loadAnimation({
            container: document.getElementById('file-security-animation'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/animation/file-security.json'
        });

        // Show the modal if PDF is already secured
    @if (ViewBag.IsAlreadySecured == true)
    {
        <text>
                    var alreadySecuredModal = new bootstrap.Modal(document.getElementById('alreadySecuredModal'));
                    alreadySecuredModal.show();
        </text>
    }
        });
</script>
